import os
import shutil

def copy_files(source_directory, destination_directory):
    # Перевіряємо, чи існує каталог призначення, інакше створюємо його
    if not os.path.exists(destination_directory):
        os.makedirs(destination_directory)

    # Отримуємо список файлів у каталозі-джерелі
    files = os.listdir(source_directory)

    # Копіюємо файли у каталог призначення
    for file in files:
        source_path = os.path.join(source_directory, file)
        destination_path = os.path.join(destination_directory, file)
        shutil.copy2(source_path, destination_path)
        print(f"Файл {file} скопійовано до {destination_directory}")

if __name__ == "__main__":
    source_dir = "вихідний_каталог"        # Вказуйте ваш вихідний каталог
    destination_dir = "каталог_призначення"  # Вказуйте каталог, куди ви хочете скопіювати файли
    copy_files(source_dir, destination_dir)
